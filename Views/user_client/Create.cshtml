@model wafa.Models.User

<style>
    a {
        text-decoration: none;
        color: orange;
    }

        a:hover {
            color: orange;
        }

    input {
        border-radius: 25px;
        padding: 10px;
        margin: 5px;
        background-color: #FF5F1F;
        width: 170px;
        border: 1px solid white;
        color: white;
    }

