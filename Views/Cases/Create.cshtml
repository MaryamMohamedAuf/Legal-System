@model wafa.Models.Case

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
<style>
  
    a {
        text-decoration: none;
        color: orange;
    }

        a:hover {
            color: orange;
        }

    #btn {
        border-radius: 25px;
        padding: 10px;
        margin: 5px;
        background-color: #FF5F1F;
        width: 170px;
        border: 1px solid white;
        color: white;
    }

        #btn a {
            color: white;
        }
</style>

